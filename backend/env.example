# .env.example para Cuentix - Backend

# Configuración de Flask
FLASK_APP=main.py
FLASK_ENV=development
SECRET_KEY=tu_clave_secreta_aqui

# Rutas internas (opcional, si usas os.getenv para rutas)
ASSETS_DIR=assets/
VIDEO_DIR=assets/videos/

# Claves API - Reemplaza estos valores con los reales en tu .env personal
# 🔐 Nunca compartas el archivo real .env en GitHub
DEEPSEEK_API_KEY=tu_clave_deepseek
OPENAI_API_KEY=tu_clave_openai
OPENAI_PROJECT_ID=tu_id_openai_project
ELEVENLABS_API_KEY=tu_clave_elevenlabs
ELEVENLABS_VOICE_ID=tu_voice_id

# Configuración de TTS
TTS_ENGINE=openai  # opciones: openai, elevenlabs, gtts

# Configuración de Whisper (si usas transcripción)
WHISPER_MODEL_SIZE=base
